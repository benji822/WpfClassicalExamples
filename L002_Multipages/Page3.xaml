<Page x:Class="L002_Multipages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:L002_Multipages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3" Background="GhostWhite">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock>This is page 3</TextBlock>
        </StackPanel>
        <Grid Grid.Row="1">
            <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Margin="20" Height="25" Click="Button_Click">Back</Button>
            <Button Width="100" Height="25" Margin="20" VerticalAlignment="Bottom" Click="Button_Click_1">Page 1</Button>
            <Button Width="100" Height="25" Margin="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click_2">Forward</Button>
        </Grid>
    </Grid>
</Page>
